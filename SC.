    <title>Quiz Applications</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #1e1e2f;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            flex-direction: column;
        }
        h1 {
            margin-bottom: 10px;
            color: #ffcc00;
            text-transform: uppercase;
        }
        .quiz-container {
            background: #2c2c3e;
            padding: 20px;
            border-radius: 10px;
            width: 400px;
            text-align: center;
        }
        .option {
            display: block;
            background: #444;
            margin: 10px 0;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }
        .option:hover {
            background: #666;
        }
        .correct {
            background: green !important;
        }
        .wrong {
            background: red !important;
        }
    </style>
